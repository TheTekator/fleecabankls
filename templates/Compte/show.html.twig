{% extends 'base.html.twig' %}

{% block content %}
    <h1>Fiche du compte : {{ monCompte.number }}</h1>

    <table>
        <thead>
        <tr>
            <td>Nom du client</td>
            <td>Type de compte</td>
            <td>Date ouverture</td>
            <td>Toujours ouvert ?</td>
        </tr>
        </thead>
        <tbody>
        <tr>
            <td><a href="{{ path('show_client', {'id': monCompte.client.id}) }}">{{ monCompte.client.name }}</a></td>
            <td>{{ monCompte.genreCompte.name }}</td>
            <td>{{ monCompte.dateOuverture|date('d/m/Y') }}</td>
            <td
                    {% if monCompte.open %} style="background-color: green"
                    {% else %} style="background-color: red"
                    {% endif %}
            ></td>
        </tr>
        </tbody>
    </table>
{% endblock %}